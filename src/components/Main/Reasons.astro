---
import ReasonInfo from "@components/ReasonInfo.astro";
import { REASONS } from "./InfoCard";
import type { Code, Debug } from "astro:components";
---

<section class="relative pt-10">
  <div class="max-w-[1024px] mx-auto  relative z-[80]">
    <h2 class="text-[3.125rem] font-semibold text-white dark:text-[#009AA6] text-center">POR QUÉ CIBERTEC</h2>
    <span class="w-10 h-[14px] rounded-[7px] bg-[#69BE28] block mx-auto mb-10"></span>
    <div class="grid grid-cols-4">
      {
        REASONS.map(reason => (
        <ReasonInfo {...reason}/>
        ))
      }
      
    </div>
    <div class="flex justify-center mt-10 pb-10">
      <a class="py-2 px-14 border-white border-[1px] rounded-full font-semibold hover:text-white hover:bg-[#001c2c] text-white text-sm">VER MÁS</a>
    </div>
  </div>
  <div class="bg-[#009AA6] absolute h-full w-full bottom-0 z-[10]"></div>
</section>